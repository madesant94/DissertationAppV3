<?xml version="1.0" encoding="utf-8"?>
<!-- custom_snackbar_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/muted_blue"
    android:gravity="center">

    <TextView
    android:id="@+id/snackbar_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:text="Error! You did not grant location permission. Please specify start and destination points or change permissions in phone -> Settings." />

    </LinearLayout>